<% content_for :header_js do %>
<link rel="stylesheet" type="text/css" href="/rating_styles.css">
<% end %>

<% content_for :footer_js do %>
<script>
  $(document).ready(function(){
    $('.option-button').on('click', function(){
      $('#type_input').val($(this).attr('data-option'));
      $('.after-click').show();
    });
  });
</script>
<% end %>

<div class="mdl-grid content-grid">
  <div class="description-section-text">
    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-typography--display-1-color-contrast">
        Felicitaciones!
        <p class="mdl-typography--font-light">
         Tu conductor <%= driver_name %> llegar√° en cualquier momento. Para finalizar, completa las siguientes acciones:
         <br>
        </p>
      </div>
    </div>
    <form method="POST" action="/pay_trip_miles">
      <div class="mdl-cell mdl-cell--12-col mdl-typography--display-1-color-contrast">
        <p class="mdl-typography--font-light">
          Ingresa cuantas millas quieres canjear!
          1 milla = $1
        </p>
        <p class="mdl-typography--font-light">
          Tienes <%= user_miles %> millas!
        </p>
        <p class="mdl-typography--font-light">
          El costo del viaje es $<%= trip_cost %>
        </p>
      </div>
      <div class="mdl-row">
      <div class="mdl-textfield mdl-js-textfield">
        <input class="mdl-textfield__input" type="text" id="miles" name="miles">
        <label class="mdl-textfield__label" for="miles">Millas</label>
      </div>
    </div>
      <div class="mdl-cell mdl-cell--12-col">
        <input type="hidden" name="driver_name" value="<%= driver_name %>">
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" id="select-trip-button" type="submit" name="submit">
          Canjear
        </button>
      </div>
    </form>
  </div>
</div>